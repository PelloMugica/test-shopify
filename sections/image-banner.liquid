{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}


<div class="banner__content" style="background-image:url('{{ section.settings.image | img_url: 'master' }}')">
  <h2>
    {{ section.settings.text }}
  </h2>
</div>

{% schema %}
{
  "name": "t:sections.image-banner.name",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.image-banner.settings.image.label"
    },
    {
      "type": "text",
      "id": "text",
      "default": "Texto sobre la imagen",
      "label": "Texto sobre la imagen"
    }
  ]
}
{% endschema %}
