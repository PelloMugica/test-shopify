{{ 'section-image-right.css' | asset_url | stylesheet_tag }}


<div class="image-right-row">
  <div class="left-col">
    <h2>
      {{ section.settings.title }}
    </h2>
    <p>
      {{ section.settings.text }}
    </p>
  </div>
  <div class="right-col">
      <img src="{{ section.settings.image | img_url: '720x' }}"
        sizes="(min-width: 990px){% if section.blocks.size == 1 %} 990px{% else %} 730px{% endif %}, (min-width: 750px){% if section.blocks.size == 1 %} calc(100vw - 100px){% else%} 500px{% endif %}, calc(100vw - 30px)"
        alt="{{ section.settings.image.alt | escape }}"
        loading="lazy"
      >
  </div>
</div>

{% schema %}
{
  "name": "Imagen a la derecha",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.image-banner.settings.image.label"
    },
    {
      "type": "text",
      "id": "title",
      "default": "Roberto crosta",
      "label": "Titulo a la izquierda"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Parrafo de la derecha"
    }
  ]
}
{% endschema %}
